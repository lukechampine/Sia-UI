#files
    .header
        .title Files
        .capsule
            .pod.renter-host-count
            .pod.renter-price
    .cloud-control
        .pure-g
            .pure-u-1-2
                .button.upload-public
                    %i.fa.fa-upload
                    Upload File
                .button.add-ascii
                    %i.fa.fa-ticket
                    Add Ascii File
            .pure-u-1-2
                .search
                    .text{:contentEditable=>"true"}
                    %i.fa.fa-search
    .file-browser
        .file.blueprint
            .graphic
                %i.fa.fa-file
            .available
                .yes
                    %i.fa.fa-check
                .no
                    %i.fa.fa-refresh.fa-spin
            .name
            .size
            .time
            .download Download
            .share Share
            .delete Delete
